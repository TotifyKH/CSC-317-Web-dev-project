<!DOCTYPE html>

<div class="login-container">
  <div class="login-item-1">
    <header>
      CSC 317 LOGIN
    </header>
  </div>

  <div class="login-item-2">
    <form id="login-form" method="POST" action="/users/login" enctype="application/x-www-form-urlencoded">
      <div class="textfield">
        <label for="username" >Username: </label>
        <input type="text" id="username" name="username" required><br>
      </div>
      <div class="textfield">
        <label for="user-password" >Password: </label>
        <input type="password" id="user-password" name="password" required><br>
      </div>

      <input type="submit" class="login-submit" value="Log In"><br>
      <hr id="login-hr">
      <input type="button" class="register-button" onclick="location.href='/register';"  value="Register">
    </form>
  </div>
  
</div>

